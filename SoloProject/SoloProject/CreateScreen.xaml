<Window x:Class="SoloProject.CreateScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoloProject"
        mc:Ignorable="d"
        Title="CreateScreen" Height="350" Width="360">
    <Border Background="LightGreen" CornerRadius="20" Margin="20,20,20,11">
        <StackPanel Margin="20">
            <Label Content="Create a new account" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Create a username" Foreground="White" FontSize="18"/>
            <TextBox Name="txtUsername" Background="LightGray" Foreground="White" FontSize="18"/>
            <Label Content="Create a password" Foreground="White" FontSize="18"/>
            <PasswordBox Name="txtPassword" Background="LightGray" Foreground="White" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="60 10" Background="LightGray" FontSize="18"/>
            
        </StackPanel>
    </Border>
</Window>
